<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#AA5bc0de" />
            <stroke
                android:width="1dp"
                android:color="#AA31b0d5" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#AA5bc0de"
                android:endColor="#AA31b0d5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#AA31b0d5" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
</selector>