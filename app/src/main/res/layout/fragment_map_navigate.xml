<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plataformaam.mobile.clientefinal.userinterfaces.mapsfragments.MapFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:padding="10dp"
        android:background="@color/pam_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/btnDetailPublish"
            android:layout_alignParentTop="true"
            style="@style/map_frame"
            android:padding="5dp"
            >

            <fragment
                android:id="@+id/navigate_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment"

                />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnPublish"
            android:id="@+id/btnNavigatePublish"
            android:singleLine="false"
            style="@style/btn_primary"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="5dp"

            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnDetail"
            android:id="@+id/btnDetailPublish"
            android:singleLine="false"
            android:layout_weight="1"
            style="@style/btn_info"
            android:layout_above="@+id/btnNavigatePublish"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|bottom"
            android:layout_margin="5dp"

            />
    </RelativeLayout>


</FrameLayout>