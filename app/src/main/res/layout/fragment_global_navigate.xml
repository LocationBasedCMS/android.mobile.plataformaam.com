<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plataformaam.mobile.clientefinal.userinterfaces.mapsfragments.GlobalNavigateFragment">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome do VCloc"
            android:id="@+id/lblNavigateVclocName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <fragment
            android:id="@+id/navigate_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnPublish"
            android:id="@+id/btnNavigatePublish"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:singleLine="false"
            style="@style/btn_primary"
            />
    </RelativeLayout>
</FrameLayout>